    <Authors>Fran√ßois DORIN</Authors>
    <Description>Utilities for accessing configuration in app.config or web.config files.</Description>
    <PackageLicenseUrl></PackageLicenseUrl>
    <AssemblyVersion>0.0.6.0</AssemblyVersion>
    <FileVersion>0.0.6.0</FileVersion>
    <Version>0.0.6</Version>
    <Company>Custom Dev</Company>
    <PackageTags>Configuration</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
